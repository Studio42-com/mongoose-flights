<%- include('../partials/header') %>

<section id="show-page">
  <div>Airport: </div><div><%= flight.airport %></div>
  <div>Airline: </div><div> <%= flight.airline %></div>
  <div>Flight #: </div><div> <%= flight.flightNo %></div>
  <div>Departure Date:  </div><div><%= flight.departs %></div>
  
<!-- Let visitor prepare to buy tickets -->

<h2>Buy Tickets</h2>
<br><br>

<form id="add-ticket-form" method="POST" action="/flights/<%= flight._id %>/tickets">
  <label>Purchase Tickets:</label>
  <input name="seat" required pattern="[A-F][1-9]\d?" placeholder="A22"></input>
  <label>Seat Type:</label>
  <select name="price">
    <option value="160">First Class $160</option>
    <option value="140">Business Class $140</option>
    <option value="120">Extra Legroom $120</option>
    <option value="85" selected>Sardine Section $85</option>
  </select>
  <input type="submit" value="Buy Ticket">
</form>

<% if (flight.tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Flight</th>
        <th>Seat</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(function(t) { %>
        
        <tr>
          <td><%= flight.departs %></td>
          <td><%= t.seat %></td>
          <td>$<%= t.price %></td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="2"></td>
        <td><strong>Totals:</strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No tickets sold Yet</h5>
<% } %>
